{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "listFiles": false,
    "strictNullChecks": false
  },
  "exclude": [
    ".vscode",
    ".git",
    "node_modules",
    ".dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
